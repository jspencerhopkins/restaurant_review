<%= form_for [ @restaurant, @review ] do |f| %>
	<fieldset>
		<legend>Add a Review</legend>

		<p>
			<%= f.label :comment %><br>
			<%= f.text_area :comment, rows: 10, cols: 35 %>
		</p>
		<p>
			<%= f.label :rating %>
			<%= f.select :rating, options_for_select([["1 (lowest)", 1], 2,3,4,5]) %>
		<p>
			<%= f.label :recommend, "Would You Recommend?" %>
			<%= f.check_box :recommend %>
		</p>

		</p>
			<%= f.submit %>
		</p>

	</fieldset>
		
<% end %>